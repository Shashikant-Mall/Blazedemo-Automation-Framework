<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Suite">

       <groups>
          <run>
             <include name="Smoke"></include>  
          <!--   <include name="Functional"></include> -->
         <!--    <include name="Data-driven"></include>  -->
            <include name="Negative"></include>
          </run>
      </groups>

	<test thread-count="5" name="SmokeTest">

		<parameter name="OS" value="Windows"></parameter>
		<parameter name="bName" value="chrome"></parameter>

		<classes>
	       <class name="com.blazedemo.tests.FlightBookingTest"/> 
           <class name="com.blazedemo.tests.TC01VerifyHomePageLoadsAndDropdownVisible"></class> 
           <class name="com.blazedemo.tests.TC02SearchFlightWithValidCities"></class>  
           <class name="com.blazedemo.tests.TC03CompleteFlightBooking"></class>  
           <class name="com.blazedemo.tests.TC04FlightBookingDataDrivenTest"></class> 
            <class name="com.blazedemo.tests.TC05BlankCreditCard"></class>    
           <class name="com.blazedemo.tests.TC06InvalidCreditCardCharacter"></class>  
           <class name="com.blazedemo.tests.TC07SameDepartAndDestinCity"></class>  

		</classes>
	</test> <!--Test -->

</suite> <!--Suite -->
